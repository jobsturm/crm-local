{
  "name": "crm-local",
  "version": "1.0.0",
  "description": "Local CRM with Customer Management and Invoicing",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/shared",
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:shared": "npm run build --workspace=@crm-local/shared",
    "dev": "npm run dev --workspace=@crm-local/frontend",
    "dev:backend": "npm run dev --workspace=@crm-local/backend",
    "test": "npm run test --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "eslint \"packages/*/src/**/*.{ts,vue}\"",
    "lint:fix": "eslint \"packages/*/src/**/*.{ts,vue}\" --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,vue}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,vue}\"",
    "typecheck": "tsc --noEmit -p packages/shared/tsconfig.json && tsc --noEmit -p packages/backend/tsconfig.json && vue-tsc --noEmit -p packages/frontend/tsconfig.json",
    "generate-test-data": "npm run generate-test-data --workspace=@crm-local/backend",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "electron": "^40.2.1",
    "eslint": "^9.0.0",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
