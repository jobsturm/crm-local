{
  "name": "@crm-local/backend",
  "version": "1.0.0",
  "description": "CRM Local Backend API Server",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:bundle": "esbuild src/server-entry.ts --bundle --platform=node --target=node20 --outfile=dist-bundle/server.cjs --format=cjs",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "clean": "rm -rf dist dist-bundle",
    "generate-test-data": "tsx scripts/generate-test-data.ts"
  },
  "dependencies": {
    "@crm-local/shared": "*",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.27.2",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  }
}
